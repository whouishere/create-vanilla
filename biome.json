{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "useShorthandArrayType": "error",
        "useConst": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 4,
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "none"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 4
    }
  }
}
